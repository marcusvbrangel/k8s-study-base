apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: wolfshop-httproute
  namespace: wolfshop
spec:
  parentRefs:
  - name: wolfshop-gateway
    sectionName: http
  hostnames:
  - "*.wolfshop.com"
  rules:
  - matches:
    - path: 
        type: PathPrefix
        value: /catalog
    - path: 
        type: Exact
        value: /
    backendRefs:
    - name: wolfshop-catalog
      port: 80
